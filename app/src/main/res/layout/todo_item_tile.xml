<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/checkbox_todo_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/checkbox_todo_item_state"
        android:minHeight="0dp"
        android:minWidth="0dp"
        />

    <TextView
        android:id="@+id/todo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/checkbox_todo_item_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_todo_item_state"
        app:layout_constraintStart_toEndOf="@id/checkbox_todo_item_state"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:maxLength="30"
        tools:text= 'Example Item'
        />

    <ImageView
        android:id="@+id/ic_importance"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_important"
        android:foregroundGravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_todo_item_state"
        />

</androidx.constraintlayout.widget.ConstraintLayout>